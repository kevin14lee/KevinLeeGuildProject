using System;

public class Guild Assessment
{
   public decimal CalculateOrderAmount(decimal weight)
   {
	public decimal orderAmount;
      switch (weight)
      {
         case weight <= 1:
		orderAmount = 15;
            break;
         case weight <= 10:
            orderAmount = 5 lbs;
            break; 
         case weight > 10:
            orderAmount = (weight - 5);   
            break;
         
   default:
            Console.WriteLine("The weight is invalid.");
            break;   
      }
	Return orderAmount;
   }
}

## Test Cases

runTests(0)
orderAmount=15

runTests(0.5)
orderAmount=15

runTests(5)
orderAmount=5

runTests(11)
orderAmount(6)

runTests(-1)
The weight is invalid

